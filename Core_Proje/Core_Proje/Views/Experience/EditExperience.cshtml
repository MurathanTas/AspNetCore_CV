@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Deneyim Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.ExperienceID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="text" asp-for="Date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="10" cols="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

