@using EntityLayer.Concrete
@model List<Testimonials>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<style>
    .table td, .table th {
        white-space: normal;
        word-wrap: break-word;
        max-width: 200px; /* İhtiyacınıza göre bu değeri ayarlayın */
    }

    .table th {
        text-align: left;
    }

    .description-cell {
        max-width: 300px; /* Description hücresinin genişliğini ayarlayın */
    }
</style>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Ad Soyad </th>
                                <th> Şirket </th>
                                <th> Yorum </th>
                                <th> Sil </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td> @item.ClientName </td>
                                    <td> @item.Company </td>
                                    <td class="description-cell">
                                        @item.Comment
                                    </td>
                                    <td> <a href="/Testimonial/DeleteTestimonials/@item.TestimonialsID" class="btn btn-outline-danger">Sil</a> </td>
                                    <td> <a href="/Testimonial/EditTestimonials/@item.TestimonialsID" class="btn btn-outline-info">Detaylar</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Testimonial/AddTestimonial/" class="btn btn-outline-info">Yeni Referans Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
